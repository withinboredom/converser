{
  "settings": {
    "defaultTool": "native"
  },
  "tasks": [
    {
      "name": "build",
      "description": "build the project",
      "tasks": [
        {
          "name": "pre-build",
          "tasks": [
            {
              "name": "rocker-build-builder",
              "exec": {
                "native": {
                  "command": ["./rocker","build","--var","BUILD_NUMBER=$BUILD_NUMBER","-f","images/builder/builder.Rockerfile","--no-garbage","."]
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "deploy",
      "tasks": [
        {
          "name": "git-tag",
          "exec": {
            "native": {
              "command": ["git","tag","-s","$BUILD_NUMBER"]
            }
          }
        },
        {
          "name": "push",
          "exec": {
            "native": {
              "command": ["rocker","build","--var","BUILD_NUMBER=$BUILD_NUMBER","-f","images/builder/builder.Rockerfile","--pull","--no-garbage","--push","."]
            }
          }
        }
      ]
    },
    {
      "name": "develop",
      "description": "Use to easily develop -- make sure to run build first",
      "tasks": [
        {
          "name": "install",
          "tasks": [
            {
              "name": "install-api",
              "exec": {
                "native": {
                  "command": ["composer install"],
                  "working": "src/api"
                }
              }
            },
            {
              "name": "install-web",
              "exec": {
                "native": {
                  "command": ["yarn"],
                  "working": "src/site/js"
                }
              }
            },
            {
              "name": "install-engine",
              "exec": {
                "native": {
                  "command": ["composer","install"],
                  "working": "src/engine"
                }
              }
            }
          ]
        },
        {
          "name": "start",
          "tasks": [
            {
              "name": "stop",
              "exec": {
                "native": {
                  "command": ["docker-compose","down"]
                }
              }
            }
          ],
          "exec": {
            "native": {
              "command": ["docker-compose","up","-d"]
            }
          }
        },
        {
          "name": "api",
          "exec": {
            "native": {
              "command": ["docker-compose","up","--no-recreate","api"]
            }
          }
        },
        {
          "name": "site",
          "exec": {
            "native": {
              "command": ["node_modules/.bin/webpack","-w"],
              "working": "src/site/js"
            }
          }
        },
        {
          "name": "engine",
          "exec": {
            "native": {
              "command": ["docker-compose","up","--no-recreate","engine"]
            }
          }
        }
      ]
    },
    {
      "name": "clean",
      "description": "clean the repo",
      "tasks": [
        {
          "name": "node_modules",
          "exec": {
            "native": {
              "command": ["rm","-rf","node_modules"],
              "working": "src/site/js"
            }
          }
        },
        {
          "name": "vendor",
          "exec": {
            "native": {
              "command": ["rm","-rf","vendor"],
              "working": "src/api"
            }
          }
        },
        {
          "name": "engine-vendor",
          "exec": {
            "native": {
              "command": ["rm","-rf","vendor"],
              "working": "src/engine"
            }
          }
        },
        {
          "name": "build",
          "exec": {
            "native": {
              "command": ["rm","-f","bundle.js"],
              "working": "src/site/build"
            }
          }
        }
      ],
      "exec": {
        "native": {
          "command": ["docker-compose","down","-v"]
        }
      }
    },
    {
      "name": "update",
      "description": "Update all dependencies",
      "tasks": [
        {
          "name": "update-api-composer",
          "exec": {
            "native": {
              "command": ["composer","update"],
              "working": "src/api"
            }
          }
        },
        {
          "name": "update-engine-composer",
          "exec": {
            "native": {
              "command": ["composer","update"],
              "working": "src/engine"
            }
          }
        },
        {
          "name": "update-node",
          "exec": {
            "native": {
              "command": ["yarn","upgrade"],
              "working": "src/site/js"
            }
          }
        }
      ]
    },
    {
      "name": "bump",
      "tasks": [
        "push"
      ]
    }
  ]
}
