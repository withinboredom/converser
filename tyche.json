{
  "settings": {
    "defaultTool": "native"
  },
  "tasks": [
    {
      "name": "build",
      "description": "build the project",
      "tasks": [
        {
          "name": "docker-pull",
          "tasks": [
            {
              "exec": {
                "native": {
                  "command": [
                    "docker pull withinboredom/yarn:latest"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker pull withinboredom/caddy:latest"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker pull withinboredom/site:latest"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker pull withinboredom/api:latest"
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "yarn",
          "tasks": [
            {
              "exec": {
                "native": {
                  "command": [
                    "docker build",
                    "--cache-from withinboredom/yarn:latest",
                    "-t withinboredom/yarn:latest",
                    "-f images/yarn.dockerfile",
                    "."
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "caddy",
          "tasks": [
            {
              "exec": {
                "native": {
                  "command": [
                    "docker build",
                    "--cache-from withinboredom/caddy:latest",
                    "-t withinboredom/caddy:latest",
                    "-f images/caddy.dockerfile",
                    "."
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "site",
          "tasks": [
            {
              "exec": {
                "native": {
                  "command": [
                    "docker build",
                    "--build-arg CALL=$CALL",
                    "--build-arg STRIPE_P_KEY=$STRIPE_P_KEY",
                    "--build-arg API_HOST=$API_HOST",
                    "-t temp",
                    "-f images/site-builder.dockerfile",
                    "."
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker run",
                    "--rm",
                    "temp tar -c /app > site.tar"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker build",
                    "-t withinboredom/site:latest",
                    "--cache-from withinboredom/site:latest",
                    "-f images/site.dockerfile",
                    "."
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "rm -f site.tar && docker rmi temp"
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "api",
          "tasks": [
            {
              "exec": {
                "native": {
                  "command": [
                    "docker build -t temp -f images/api-builder.dockerfile ."
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker run --rm temp tar -c /app > api.tar"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker build",
                    "-t withinboredom/api:latest",
                    "--cache-from withinboredom/api:latest",
                    "-f images/api.dockerfile",
                    "."
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "rm -f api.tar && docker rmi temp"
                  ]
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "deploy",
      "tasks": [
        {
          "name": "push",
          "tasks": [
            {
              "exec": {
                "native": {
                  "command": [
                    "docker tag withinboredom/yarn:latest withinboredom/yarn:$BUILD_NUMBER"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker tag withinboredom/caddy:latest withinboredom/caddy:$BUILD_NUMBER"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker tag withinboredom/site:latest withinboredom/site:$BUILD_NUMBER"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker tag withinboredom/api:latest withinboredom/api:$BUILD_NUMBER"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker push withinboredom/yarn"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker push withinboredom/caddy"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker push withinboredom/site"
                  ]
                }
              }
            },
            {
              "exec": {
                "native": {
                  "command": [
                    "docker push withinboredom/api"
                  ]
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "develop",
      "description": "Use to easily develop -- make sure to run build first",
      "tasks": [
        {
          "name": "install",
          "tasks": [
            {
              "name": "install-api",
              "exec": {
                "native": {
                  "command": [
                    "yarn"
                  ],
                  "working": "src/api"
                }
              }
            },
            {
              "name": "install-web",
              "exec": {
                "native": {
                  "command": [
                    "yarn"
                  ],
                  "working": "src/site/js"
                }
              }
            },
            {
              "name": "install-engine",
              "exec": {
                "native": {
                  "command": [
                    "composer",
                    "install"
                  ],
                  "working": "src/engine"
                }
              }
            }
          ]
        },
        {
          "name": "start",
          "tasks": [
            {
              "name": "stop",
              "exec": {
                "native": {
                  "command": [
                    "docker-compose",
                    "down"
                  ]
                }
              }
            }
          ],
          "exec": {
            "native": {
              "command": [
                "docker-compose",
                "up"
              ]
            }
          }
        },
        {
          "name": "api",
          "exec": {
            "native": {
              "command": [
                "docker-compose",
                "up",
                "--no-recreate",
                "api"
              ]
            }
          }
        },
        {
          "name": "site",
          "exec": {
            "native": {
              "command": [
                "node_modules/.bin/webpack",
                "-w"
              ],
              "working": "src/site/js"
            }
          }
        },
        {
          "name": "engine",
          "exec": {
            "native": {
              "command": [
                "docker-compose",
                "up",
                "--no-recreate",
                "engine"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "clean",
      "description": "clean the repo",
      "tasks": [
        {
          "name": "node_modules",
          "exec": {
            "native": {
              "command": [
                "rm",
                "-rf",
                "node_modules"
              ],
              "working": "src/site/js"
            }
          }
        },
        {
          "name": "api_modules",
          "exec": {
            "native": {
              "command": [
                "rm",
                "-rf",
                "node_modules"
              ],
              "working": "src/api"
            }
          }
        },
        {
          "name": "engine-vendor",
          "exec": {
            "native": {
              "command": [
                "rm",
                "-rf",
                "vendor"
              ],
              "working": "src/engine"
            }
          }
        },
        {
          "name": "build",
          "exec": {
            "native": {
              "command": [
                "rm",
                "-f",
                "bundle.js"
              ],
              "working": "src/site/build"
            }
          }
        }
      ],
      "exec": {
        "native": {
          "command": [
            "docker-compose",
            "down",
            "-v"
          ]
        }
      }
    },
    {
      "name": "update",
      "description": "Update all dependencies",
      "tasks": [
        {
          "name": "update-api-composer",
          "exec": {
            "native": {
              "command": [
                "yarn",
                "upgrade"
              ],
              "working": "src/api"
            }
          }
        },
        {
          "name": "update-engine-composer",
          "exec": {
            "native": {
              "command": [
                "composer",
                "update"
              ],
              "working": "src/engine"
            }
          }
        },
        {
          "name": "update-node",
          "exec": {
            "native": {
              "command": [
                "yarn",
                "upgrade"
              ],
              "working": "src/site/js"
            }
          }
        },
        {
          "name": "updateable-api",
          "exec": {
            "native": {
              "command": [
                "echo",
                "api updates",
                "&&",
                "yarn",
                "outdated"
              ],
              "working": "src/api"
            }
          }
        },
        {
          "name": "updatable-site",
          "exec": {
            "native": {
              "command": [
                "echo",
                "site updates",
                "&&",
                "yarn outdated"
              ],
              "working": "src/site/js"
            }
          }
        }
      ]
    },
    {
      "name": "bump",
      "tasks": [
        "push"
      ]
    }
  ]
}
